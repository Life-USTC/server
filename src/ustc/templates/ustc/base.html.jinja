        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Auto-submit form functionality for search/filter forms
        const autoSubmitForm = document.querySelector('[data-auto-submit="true"]');
        if (autoSubmitForm) {
          const selectElements = autoSubmitForm.querySelectorAll('select');
          const searchInput = autoSubmitForm.querySelector('input[name="q"]');
          
          function performSearch() {
            autoSubmitForm.submit();
          }

          // Auto-submit on select change
          selectElements.forEach(function(select) {
            select.addEventListener('change', performSearch);
          });

          // Auto-submit on search input blur (optional)
          if (searchInput) {
            searchInput.addEventListener('blur', function() {
              // Only submit if value has changed
              if (this.value !== this.getAttribute('data-initial-value')) {
                performSearch();
              }
            });
            // Store initial value
            searchInput.setAttribute('data-initial-value', searchInput.value);
          }
        }
      });
