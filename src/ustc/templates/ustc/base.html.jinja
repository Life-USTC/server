{% load i18n %}
{% load ustc_extras %}
<!DOCTYPE html>
<html lang="{% get_current_language as LANGUAGE_CODE %}{{ LANGUAGE_CODE }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description"
          content="{% block meta_description %}{% trans "Life@USTC - Course and teacher information system" %}{% endblock %}" />
    <meta name="keywords"
          content="{% block meta_keywords %}{% trans "courses, teachers, semesters, sections, university" %}{% endblock %}" />
    <title>
      {% block title %}
        {% trans "Life@USTC" %}
      {% endblock %}
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
      /* Modern gradient color scheme with OKLCH */
      :root {
        /* Primary purple gradient colors in OKLCH for better perceptual uniformity */
        --color-primary-start: oklch(0.60 0.20 300); /* Main purple - shifted to 300 (more purple) */
        --color-primary-end: oklch(0.50 0.18 310); /* Darker purple */
        
        /* Bootstrap theme color overrides using OKLCH */
        --bs-primary: oklch(0.60 0.20 300);
        --bs-primary-rgb: 126, 102, 234;
        --bs-secondary: oklch(0.70 0.18 305);
        --bs-secondary-rgb: 165, 123, 240;
        --bs-success: oklch(0.65 0.16 300);
        --bs-success-rgb: 147, 123, 219;
        --bs-info: oklch(0.68 0.14 295);
        --bs-info-rgb: 155, 135, 229;
        --bs-warning: oklch(0.75 0.12 305);
        --bs-warning-rgb: 199, 167, 240;
        --bs-danger: oklch(0.58 0.16 310);
        --bs-danger-rgb: 159, 89, 176;
        --bs-light: oklch(0.96 0.006 300);
        --bs-light-rgb: 245, 244, 248;
        --bs-dark: oklch(0.38 0.020 300);
        --bs-dark-rgb: 86, 77, 104;
        
        /* Bootstrap table background colors */
        --bs-table-bg: transparent;
        --bs-table-striped-bg: oklch(0.60 0.20 300 / 0.03);
        --bs-table-hover-bg: oklch(0.60 0.20 300 / 0.06);
        
        /* Override Bootstrap table contextual classes with purple theme */
        --bs-table-active-bg: oklch(0.60 0.20 300 / 0.1);
        --bs-table-active-color: oklch(0.38 0.020 300);
        
        /* Table Light - override blue default */
        --bs-light-bg-subtle: oklch(0.94 0.04 300);
        --bs-light-border-subtle: oklch(0.86 0.03 300);
        --bs-light-text-emphasis: oklch(0.48 0.018 300);
        
        /* Table Info - override blue default */
        --bs-info-bg-subtle: oklch(0.92 0.05 300);
        --bs-info-border-subtle: oklch(0.84 0.04 300);
        --bs-info-text-emphasis: oklch(0.45 0.015 300);
        
        /* Convenience variables mapping to Bootstrap theme */
        --color-primary: var(--bs-primary);
        --color-primary-dark: oklch(0.55 0.19 305);
        --color-primary-light: oklch(0.60 0.20 300 / 0.1);
        --color-secondary: var(--bs-secondary);
        --color-success: var(--bs-success);
        --color-success-dark: oklch(0.55 0.15 300);
        --color-warning: var(--bs-warning);
        --color-warning-dark: oklch(0.65 0.11 305);
        --color-info: var(--bs-info);
        --color-danger: var(--bs-danger);
        
        /* Gradients using Bootstrap theme colors */
        --gradient-primary: linear-gradient(135deg, var(--bs-primary) 0%, var(--color-primary-end) 100%);
        --gradient-secondary: linear-gradient(135deg, var(--bs-secondary) 0%, oklch(0.60 0.20 310) 100%);
        --gradient-accent: linear-gradient(135deg, var(--bs-info) 0%, oklch(0.70 0.15 290) 100%);
        --gradient-light: linear-gradient(135deg, oklch(0.60 0.20 300 / 0.05) 0%, oklch(0.50 0.18 310 / 0.05) 100%);
        
        /* Neutrals in OKLCH with purple tint for consistency */
        --color-gray-50: var(--bs-light);
        --color-gray-100: oklch(0.94 0.008 300);
        --color-gray-200: oklch(0.92 0.008 300);
        --color-gray-300: oklch(0.86 0.010 300);
        --color-gray-400: oklch(0.70 0.012 300);
        --color-gray-500: oklch(0.58 0.015 300);
        --color-gray-600: oklch(0.48 0.018 300);
        --color-gray-700: oklch(0.38 0.020 300);
        --color-gray-800: oklch(0.28 0.020 300);
        --color-gray-900: var(--bs-dark);
        
        /* Shadows with slight purple tint */
        --shadow-sm: 0 2px 4px oklch(0.30 0.02 300 / 0.08);
        --shadow-md: 0 4px 6px oklch(0.30 0.02 300 / 0.12);
        --shadow-lg: 0 8px 16px oklch(0.30 0.02 300 / 0.15);
        
        /* Border radius */
        --radius-sm: 8px;
        --radius-md: 12px;
        --radius-lg: 16px;
      }
      
      /* Override Bootstrap button colors to use our theme */
      .btn-primary {
        background: var(--gradient-primary);
        border: none;
        color: white;
      }
      
      .btn-primary:hover,
      .btn-primary:focus {
        background: linear-gradient(135deg, oklch(0.55 0.19 285) 0%, oklch(0.45 0.17 305) 100%);
        border: none;
      }
      
      .btn-secondary {
        background: var(--gradient-secondary);
        border: none;
        color: white;
      }
      
      .btn-secondary:hover,
      .btn-secondary:focus {
        background: linear-gradient(135deg, oklch(0.65 0.17 295) 0%, oklch(0.55 0.19 300) 100%);
        border: none;
      }
      
      .btn-outline-primary {
        border: 2px solid var(--bs-primary);
        color: var(--bs-primary);
      }
      
      .btn-outline-primary:hover,
      .btn-outline-primary:focus {
        background: var(--gradient-primary);
        border-color: transparent;
        color: white;
      }
      
      .btn-outline-secondary {
        border: 2px solid var(--bs-secondary);
        color: var(--bs-secondary);
      }
      
      .btn-outline-secondary:hover,
      .btn-outline-secondary:focus {
        background: var(--gradient-secondary);
        border-color: transparent;
        color: white;
      }
      
      /* Override Bootstrap badge colors */
      .badge.bg-primary {
        background: var(--gradient-primary) !important;
      }
      
      .badge.bg-secondary {
        background: var(--gradient-secondary) !important;
      }
      
      .badge.bg-success {
        background: linear-gradient(135deg, var(--bs-success) 0%, var(--color-success-dark) 100%) !important;
      }
      
      .badge.bg-warning {
        background: linear-gradient(135deg, var(--bs-warning) 0%, var(--color-warning-dark) 100%) !important;
      }
      
      .badge.bg-info {
        background: linear-gradient(135deg, var(--bs-info) 0%, oklch(0.63 0.13 270) 100%) !important;
      }
      
      .badge.bg-danger {
        background: linear-gradient(135deg, var(--bs-danger) 0%, oklch(0.53 0.15 300) 100%) !important;
      }
      
      /* Override Bootstrap alert colors */
      .alert-primary {
        background-color: oklch(0.60 0.20 280 / 0.1);
        border-color: var(--bs-primary);
        color: var(--color-primary-dark);
      }
      
      .alert-success {
        background-color: oklch(0.65 0.16 285 / 0.1);
        border-color: var(--bs-success);
        color: var(--color-success-dark);
      }
      
      .alert-warning {
        background-color: oklch(0.75 0.12 290 / 0.1);
        border-color: var(--bs-warning);
        color: var(--color-warning-dark);
      }
      
      .alert-info {
        background-color: oklch(0.68 0.14 275 / 0.1);
        border-color: var(--bs-info);
        color: oklch(0.48 0.12 275);
      }
      
      .alert-danger {
        background-color: oklch(0.58 0.16 295 / 0.1);
        border-color: var(--bs-danger);
        color: oklch(0.48 0.15 295);
      }
      
      /* Common button styles - enhance Bootstrap buttons */
      .btn {
        font-weight: 600;
        padding: 0.5rem 1.25rem;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
        box-shadow: var(--shadow-sm);
      }

      .btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
      }

      .btn-outline-primary:hover,
      .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
      }

      /* Badge styling - common properties only */
      .badge {
        font-weight: 600;
        padding: 0.35rem 0.65rem;
        border-radius: var(--radius-sm);
      }

      /* Card styling */
      .card {
        border: none;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        overflow: hidden;
      }

      .card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
      }

      .card-header {
        background: var(--gradient-light);
        border-bottom: 2px solid var(--color-primary-light);
        font-weight: 600;
        padding: 1rem 1.25rem;
      }

      /* Alert styling */
      .alert {
        border: none;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
      }

      .alert-info {
        background: var(--gradient-light);
        color: #495057;
        border-left: 4px solid var(--color-primary);
      }

      /* Table styling */
      .table {
        border-radius: var(--radius-md);
        overflow: hidden;
      }

      .table thead {
        background: var(--gradient-light);
        border-bottom: 2px solid var(--color-primary-light);
      }

      .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.5px;
        color: var(--color-gray-600);
        border-bottom: none;
        padding: 1rem 0.75rem;
      }

      .table tbody tr {
        transition: all 0.2s ease;
      }

      .table tbody tr:hover {
        background-color: var(--color-primary-light) !important;
      }

      .table-striped tbody tr:nth-of-type(odd) {
        background-color: oklch(0 0 0 / 0.02);
      }

      /* Pagination styling */
      .pagination {
        gap: 0.25rem;
      }

      .page-link {
        color: var(--color-primary);
        border: 2px solid var(--color-gray-200);
        border-radius: var(--radius-sm);
        padding: 0.5rem 0.75rem;
        font-weight: 600;
        transition: all 0.2s ease;
        margin: 0 0.125rem;
      }

      .page-link:hover {
        color: white;
        background: var(--gradient-primary);
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
      }

      .page-item.active .page-link {
        background: var(--gradient-primary);
        border-color: transparent;
        color: white;
        box-shadow: var(--shadow-sm);
      }

      .page-item.disabled .page-link {
        opacity: 0.5;
      }

      /* Form controls */
      .form-control, .form-select {
        border: 2px solid var(--color-gray-200);
        border-radius: var(--radius-sm);
        padding: 0.5rem 0.75rem;
        transition: all 0.2s ease;
      }

      .form-control:focus, .form-select:focus {
        border-color: var(--color-primary);
        box-shadow: 0 0 0 0.2rem var(--color-primary-light);
      }

      .input-group-text {
        background: var(--gradient-light);
        border: 2px solid var(--color-gray-200);
        border-right: none;
        color: var(--color-primary);
        font-weight: 600;
      }

      .input-group .form-control {
        border-left: none;
      }

      .input-group .form-control:focus {
        border-left: none;
      }

      .input-group:focus-within .input-group-text {
        border-color: var(--color-primary);
      }

      /* Make body a flex container with full height */
      html,
      body {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      }
      
      body {
        display: flex;
        flex-direction: column;
        background: linear-gradient(180deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%);
      }

      /* Main content area grows to fill available space */
      .main-content {
        flex: 1;
        padding: 2rem 0;
      }

      /* Navbar styling */
      .navbar {
        background: var(--gradient-primary) !important;
        box-shadow: var(--shadow-md);
        padding: 1rem 0;
      }

      .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: -0.5px;
      }

      .nav-link {
        font-weight: 500;
        padding: 0.5rem 1rem !important;
        border-radius: var(--radius-sm);
        transition: all 0.2s ease;
      }

      .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        font-weight: 600;
      }

      .dropdown-menu {
        border: none;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-lg);
        padding: 0.5rem;
      }

      .dropdown-item {
        border-radius: var(--radius-sm);
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
      }

      .dropdown-item:hover {
        background: var(--gradient-light);
        color: var(--color-primary);
      }

      .dropdown-item.active {
        background: var(--gradient-primary);
        color: white;
      }

      /* Footer styling */
      .footer {
        margin-top: auto;
        padding: 2rem 0;
        background: white;
        border-top: 1px solid var(--color-gray-200);
        box-shadow: 0 -2px 10px oklch(0 0 0 / 0.03);
      }

      .footer p {
        margin: 0;
        color: var(--color-gray-500);
        font-weight: 500;
      }

      .footer a {
        color: var(--color-gray-500);
        transition: color 0.2s ease;
      }

      .footer a:hover {
        color: var(--bs-primary);
      }

      /* Tooltip styling */
      .tooltip {
        font-size: 0.875rem;
      }
      
      .tooltip-inner {
        background: linear-gradient(135deg, oklch(0.25 0.01 280) 0%, oklch(0.15 0.01 280) 100%);
        border-radius: var(--radius-sm);
        max-width: 300px;
        padding: 0.5rem 0.75rem;
        text-align: left;
        box-shadow: var(--shadow-lg);
      }

      /* Link styling */
      a:not(.btn):not(.nav-link):not(.dropdown-item):not(.page-link):not(.navbar-brand) {
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
      }

      a:not(.btn):not(.nav-link):not(.dropdown-item):not(.page-link):not(.navbar-brand):hover {
        color: var(--color-primary-dark);
        text-decoration: underline;
      }

      .subtle-link {
        color: inherit;
        text-decoration: none;
        border-bottom: 1px dotted #9ca3af;
        transition: all 0.2s ease;
      }

      .subtle-link:hover {
        color: var(--color-primary);
        border-bottom-color: var(--color-primary);
      }

      /* Common detail page styles */
      .detail-header-container {
        margin-top: 0;
        margin-bottom: 2rem;
      }

      .detail-back-button {
        margin-bottom: 1rem;
        padding-left: 0;
      }

      .detail-header {
        display: flex;
        justify-content: space-between;
        align-items: end;
        flex-wrap: wrap;
        padding: 2rem;
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
      }

      .detail-header h1 {
        margin-bottom: 0.5rem;
        font-weight: 700;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .detail-info-grid {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: end;
        gap: 3rem;
        font-size: 1.1rem;
        min-width: 320px;
      }

      .detail-info-label {
        color: var(--color-gray-500);
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
      }

      .detail-code {
        font-size: 1.1rem;
        font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
        color: var(--color-gray-400);
        font-weight: 600;
      }

      /* Common list page styles */
      .list-header {
        margin-top: 0;
        margin-bottom: 2rem;
      }

      .list-title-row {
        display: flex;
        flex-direction: column;
        gap: 0;
        margin-bottom: 1.5rem;
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        overflow: hidden;
      }

      .list-title-row h1 {
        width: 100%;
        margin: 0;
        font-weight: 700;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        padding: 2rem;
      }

      .list-title-row .list-search-form,
      .list-title-row .list-filter-form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
        padding: 0 2rem 2rem 2rem;
        margin: 0;
        justify-content: flex-end;
        background: transparent;
        box-shadow: none;
        border-radius: 0;
      }

      .list-search-form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .list-search-input {
        max-width: 300px;
        flex: 1 1 auto;
        min-width: 200px;
      }

      /* Filter form styles */
      .list-filter-form {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      /* Standalone filter forms (not in title row) */
      .list-filter-form:not(.list-title-row .list-filter-form) {
        padding: 1.5rem;
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        margin-bottom: 1.5rem;
      }

      .list-filter-input {
        flex-shrink: 1;
        min-width: 150px;
      }

      .list-filter-input.search {
        max-width: 250px;
        flex: 1 1 auto;
      }

      .list-filter-input.search-compact {
        max-width: 200px;
        flex: 1 1 auto;
      }

      .list-filter-input.select {
        max-width: 180px;
        flex: 0 1 auto;
      }

      .list-filter-form .btn {
        flex-shrink: 0;
        white-space: nowrap;
      }

      /* Card layouts for list items */
      .list-cards {
        margin-bottom: 2rem;
      }

      .list-card {
        height: 100%;
        transition: all 0.3s ease;
        border: none;
        background: white;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-sm);
      }

      .list-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
      }

      /* Table layouts */
      .list-table-container {
        margin-bottom: 2rem;
        background: white;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        overflow: hidden;
      }

      .list-table-container .table {
        margin-bottom: 0;
      }

      .clickable-row {
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .clickable-row:hover {
        background-color: var(--color-primary-light) !important;
        transform: scale(1.002);
      }

      /* Stats cards */
      .stats-card {
        background: white;
        border-radius: var(--radius-md);
        padding: 1.5rem;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        border: none;
      }

      .stats-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
      }

      .stats-card h3 {
        font-size: 2.5rem;
        font-weight: 700;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
      }

      .stats-card p {
        color: #6b7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.875rem;
        margin: 0.5rem 0 0 0;
      }

      /* Section boxes */
      .section-box {
        background: white;
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
        border: 2px solid var(--color-primary-light);
      }

      .detail-header-container + h4,
      .detail-header-container + .mt-4,
      .detail-header-container + div > h4:first-child {
        margin-top: 2rem;
      }

      .detail-header + h4,
      .section-box + h4,
      .list-table-container + h4 {
        margin-top: 2rem;
      }

      /* Responsive adjustments */
      @media (max-width: 992px) {
        .list-title-row .list-search-form,
        .list-title-row .list-filter-form {
          justify-content: center;
        }

        .list-filter-input,
        .list-search-input {
          flex: 1 1 100%;
          max-width: 100%;
        }

        /* Make tables horizontally scrollable on tablets */
        .table-responsive {
          -webkit-overflow-scrolling: touch;
        }
      }

      @media (max-width: 768px) {
        /* Navbar adjustments */
        .navbar-brand {
          font-size: 1.25rem;
        }

        /* Main content padding */
        .main-content {
          padding: 1rem 0;
        }

        /* Detail header mobile */
        .detail-header {
          padding: 1.5rem;
          flex-direction: column;
          align-items: stretch;
        }

        .detail-info-grid {
          gap: 1.5rem;
          flex-direction: column;
          align-items: stretch;
          min-width: auto;
        }

        .detail-header h1 {
          font-size: 1.75rem;
        }

        /* List title row mobile */
        .list-title-row h1 {
          padding: 1.5rem;
          text-align: center;
          font-size: 1.75rem;
        }

        .list-title-row .list-search-form,
        .list-title-row .list-filter-form {
          padding: 0 1.5rem 1.5rem 1.5rem;
          justify-content: stretch;
        }

        .list-filter-form:not(.list-title-row .list-filter-form) {
          padding: 1rem;
        }

        /* Section box mobile */
        .section-box {
          padding: 1.5rem;
        }

        /* Form inputs mobile */
        .list-search-input {
          max-width: 100%;
          width: 100%;
          min-width: 100%;
        }

        .list-filter-input {
          max-width: 100%;
          width: 100%;
        }

        .list-filter-input.select,
        .list-filter-input.search,
        .list-filter-input.search-compact {
          max-width: 100%;
          flex: 1 1 100%;
        }

